{
    "compileOnSave": true,
    "compilerOptions": {
        "watch": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "removeComments": false,
        "preserveConstEnums": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}